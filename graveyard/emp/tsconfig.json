{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "downlevelIteration": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "strictNullChecks": true,
        "jsx": "react",
        "noUnusedLocals": true,
        "sourceMap": true,
        "outDir": ".build",
        "moduleResolution": "node",
        "lib": [
            "es2017",
            "es6",
            "dom"
        ],
        "rootDir": "./"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "devops",
        "api",
        "client"
    ]
}
