{
  "description": "Demonstrating webNavigation",
  "manifest_version": 2,
  "name": "webRequest-demo2",
  "version": "1.0",

  "permissions": ["webNavigation", "activeTab", "tabs", "<all_urls>"],

  "background": {
    "scripts": ["build/background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "96": "icons/icon96.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "views/popup.html",
    "default_title": "Configure Distracted"
  }
}
